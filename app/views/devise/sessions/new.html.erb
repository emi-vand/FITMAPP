<br>
<div class="container d-flex shadow my-4 w-100 pl-0 registration-container">
  <div class="col-lg-6 d-none d-lg-block signin-img">
    <%= image_tag "logofinal_white.png", class: "w-50 ml-2 mt-5" %>
  </div>

  <div class="col-lg-6 col-xs-12 p-5 align-content-center">
    <h2 class="text-center">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions mt-5 d-flex justify-content-center">
        <%= f.button :submit, "Log in", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
      <div class="text-center pt-5 singin-links">
     <%= render "devise/shared/links" %>
     </div>
  </div>

</div>

  </div>

  <div id="banner" class="logo_banner">
    <%= image_tag "logofinal_white.png", class: "logo_white" %>
    <div class="home-button">
      <%= link_to "Join Now", restaurants_path, class: "btn-home btn btn-primary btn-lg" %>
    </div>
  </div>

</div>


<div class="message <%= "right pr-4 pl-2 bg-info" if current_user == message.user %>"  id="message-<%= message.id %>">
    <div class="author d-flex border-bottom <%= "flex-row-reverse" if current_user == message.user %>">
       <div class="avatar-chat p-2 mb-2">
        <% if message.user.photo.attached? %>
            <%= cl_image_tag message.user.photo.key, class: "avatar-chat" %>
        <% else %>
            <%= image_tag "https://3.bp.blogspot.com/-qDc5kIFIhb8/UoJEpGN9DmI/AAAAAAABl1s/BfP6FcBY1R8/s1600/BlueHead.jpg", class: "avatar-chat" %>
        <% end %>
       </div>
      <span class="username"><%= message.user.username %></span>
      <small class="time-chatroom"><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
    </div>
    <p class="content <%= "text-left" if current_user == message.user %>""><%= message.content %></p>
</div>

